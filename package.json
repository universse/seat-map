{
  "private": true,
  "name": "seat-map",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "clean": "shjs ./scripts/clean.js && rm -rf node_modules .pnp .pnp.js",
    "commit": "shjs ./scripts/commit.js",
    "lint": "shjs ./scripts/lint.js",
    "lint:scss": "stylelint packages/client/src/**/*.scss",
    "lint:style": "run-p lint:styled lint:scss",
    "lint:styled": "stylelint packages/client/src/**/*.js",
    "tst": "prettier-package-json --write ./package.json"
  },
  "devDependencies": {
    "babel-eslint": "10.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-standard": "14.1.1",
    "eslint-config-standard-react": "9.2.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.4",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.5",
    "lerna": "3.22.1",
    "lint-staged": "10.2.10",
    "microbundle": "0.12.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "prettier-package-json": "2.1.3",
    "prettier-standard": "16.3.0",
    "shelljs": "0.8.4",
    "stylelint": "13.6.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-config-standard": "20.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-order": "4.1.0",
    "stylelint-processor-styled-components": "1.10.0"
  },
  "engines": {
    "node": "10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "installConfig": {
    "pnp": false
  },
  "lint-staged": {
    "**/package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "*.{js,json}": [
      "prettier-standard",
      "git add"
    ]
  }
}
